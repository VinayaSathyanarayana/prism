{
  "private": true,
  "name": "prism",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "yarn",
    "commit": "git-cz",
    "fmt": "prettier --write \"packages/*/src/**/*.{ts,js}\"",
    "lint": "tslint packages/*/src/**/*.{ts}",
    "build": "tsc --build tsconfig.all.json",
    "build.clean": "rm -rf lib",
    "build.watch": "yarn build.clean && tsc --build --watch",
    "test": "yarn lint && yarn test.fast",
    "pretest.fast": "yarn build",
    "test.fast": "jest",
    "test.coverage.clean": "rm -rf coverage",
    "test.coverage": "yarn test.coverage.clean && yarn test --coverage",
    "test.watch": "yarn test --watchAll",
    "test.update": "yarn test.fast --updateSnapshot",
    "release.dry": "source .env && lerna exec -- semantic-release --dry-run -e semantic-release-monorepo --tag-format='${LERNA_PACKAGE_NAME}-v\\${version}'",
    "release.wet": "source .env && lerna exec -- semantic-release -e semantic-release-monorepo --tag-format='${LERNA_PACKAGE_NAME}-v\\${version}'"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@semantic-release/git": "^7.0.5",
    "@stoplight/types": "1.0.x",
    "@types/chance": "1.0.x",
    "@types/jest": "23.3.x",
    "@types/node": "10.12.x",
    "ajv": "6.5.x",
    "chance": "1.0.x",
    "commitizen": "^3.0.x",
    "cz-conventional-changelog": "^2.1.x",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lerna": "^3.4.x",
    "oclif": "^1.12.5",
    "semantic-release": "15.9.x",
    "semantic-release-monorepo": "^6.1.1",
    "ts-jest": "23.10.x",
    "tslint": "5.11.x",
    "tslint-config-stoplight": "1.1.x",
    "tslint-eslint-rules": "5.4.x",
    "typescript": "3.1.x"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "feature/sl-396/release-scripts",
    "verifyConditions": [
      "@semantic-release/git",
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "prepare": [
      "@semantic-release/git",
      "@semantic-release/npm"
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  }
}
